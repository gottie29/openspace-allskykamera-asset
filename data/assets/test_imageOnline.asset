  Type = "ScreenSpaceVideo",
  Name = "AllskyVideoASK005",
  Video = asset.resource("ask005.mp4"),
  Scale = 0.8,
  Enabled = false
}

asset.onInitialize(function()
  openspace.addScreenSpaceRenderable(ASK001_Image)
  openspace.addScreenSpaceRenderable(ASK002_Image)
  openspace.addScreenSpaceRenderable(ASK005_Image)
  openspace.addScreenSpaceRenderable(Keogram_Image)
  openspace.addScreenSpaceRenderable(AllskyVideoASK001)  
  openspace.addScreenSpaceRenderable(AllskyVideoASK002)  
  openspace.addScreenSpaceRenderable(AllskyVideoASK005)  
end)

asset.onDeinitialize(function()
  openspace.removeScreenSpaceRenderable(ASK001_Image)
  openspace.removeScreenSpaceRenderable(ASK002_Image)
  openspace.removeScreenSpaceRenderable(ASK005_Image)
  openspace.removeScreenSpaceRenderable(Keogram_Image)  
  openspace.removeScreenSpaceRenderable(AllskyVideoASK001)  
  openspace.removeScreenSpaceRenderable(AllskyVideoASK002)  
  openspace.removeScreenSpaceRenderable(AllskyVideoASK005)  
end)
